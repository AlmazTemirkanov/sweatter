                    <a class="dropdown-item" href="/prepaid">Роуминг Pre</a>
                    <a class="dropdown-item" href="/postpaid">Роуминг Post</a>
                </div>
            </li>

        </ul>
    </div>
</nav>

<div class="container mt-5">
  <span class="navbar-text ml-2 pt-5">
    Поиск по SR
  </span>
    <form class="form-inline" method="get" action="/crmpost">
        <input class="form-control ml-2" type="text" name="filter_crmpost" value="{{#filter_crmpost}}{{filter_crmpost}}{{/filter_crmpost}}" >
        <button type="submit" class="btn btn-outline-dark ml-2">Найти</button>
    </form>

    <table class="table table-striped" border="1" cellpadding="5">
        <thead class="thead-dark">

        <th scope="col" >SR</th>


        </thead>
        {{#crmpost}}
            <div> <!-- -->
                <tr>

                    <th>{{#sr}}{{sr}}{{/sr}}</th>


                </tr>
            </div>
        {{/crmpost}}
    </table>
</div>







