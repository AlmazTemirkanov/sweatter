<body>

<style>
    table {
        table-layout: fixed; /* Фиксированная ширина ячеек */
        width: 100%; /* Ширина таблицы */
    }
    .col1 { width: 160px; }
    .coln { width: 60px; }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span class="navbar-brand mb-0 h1">BEENAVIGATOR</span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link ml-4" href="/">Главная</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">Роуминг</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Администратор
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/add">Добавить</a>

                </div>
            </li>
        </ul>

        <form class="mx-auto" form action="/logout" method="post">
            <button class="btn btn-outline-dark ml-2 "  type="submit">Выйти</button>

            <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        </form>

    </div>
</nav>

<div class="container mt-5">
  <span class="navbar-text ml-2">
    Поиск по сёлам
  </span>



    <form class="form-inline" method="post" action="filterAd">
        <input class="form-control ml-2" type="text" name="filterAd" >
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button type="submit" class="btn btn-outline-dark ml-2">Найти</button>

    </form>

    <div class="container mt-3">
    </div>

    <table class="table table-striped" border="1" cellpadding="5">
        <thead class="thead-dark">

        <th scope="col" >ID</th>
        <th scope="col" >Область</th>
        <th scope="col">Район</th>
        <th scope="col">Округ</th>
        <th scope="col">Село</th>
        <th scope="col">2G</th>
        <th scope="col">3G</th>
        <th scope="col">4G</th>
        <th scope="col">Del</th>
        <th scope="col">Edit</th>
        </thead>
        {{#messages}}
            <div> <!-- -->
                <tr>

                    <th>{{#id}}{{id}}{{/id}}</th>
                    <th>{{#area}}{{area}}{{/area}}</th>
                    <th>{{#district}}{{district}}{{/district}}</th>
                    <th>{{#region}}{{region}}{{/region}}</th>
                    <th>{{#selo}}{{selo}}{{/selo}}</th>
                    <th>{{#voice}}{{voice}}{{/voice}}</th>
                    <th>{{#WCDMA}}{{WCDMA}}{{/WCDMA}}</th>
                    <th>{{#LTE}}{{LTE}}{{/LTE}}</th>
    <th><a href="/delete/{{id}}">Del</a></th>
    <th><a href="/edit/{{id}}">Edit</a></th>

    </tr>
</div>
{{/messages}}
    </table>

</div>
